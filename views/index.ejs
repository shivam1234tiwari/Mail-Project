<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Send Email | NodeJS Mailer</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
  
</head>

<body>
  <div class="container mail-container">
    <!-- Header -->
    <div class="mail-header">
      <h1><i class="bi bi-envelope-paper"></i> Email Sender</h1>
      <!-- <p class="lead">Send emails directly from </p> -->
    </div>
    
    <!-- Status Message Area -->
    <div id="statusMessage" class="status-message">
      <i class="bi bi-check-circle"></i> <span id="statusText">Email sent successfully!</span>
    </div>
    
    <!-- Main Form Card -->
    <div class="card mail-card">
      <div class="card-header">
        <h3><i class="bi bi-send"></i> Compose New Email</h3>
      </div>
      <div class="card-body">
        <form id="emailForm" action="send-email" method="post">
          <!-- Recipient Email -->
          <div class="mb-4">
            <label for="toEmail" class="form-label">Email Address</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-envelope"></i></span>
              <input type="email" class="form-control" id="toEmail" name="to" required>
            </div>
            <!-- <div class="form-text">Enter a valid email address for the recipient</div> -->
          </div>
          
          <!-- Email Subject -->
          <div class="mb-4">
            <label for="emailSubject" class="form-label">Email Subject</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-card-heading"></i></span>
              <input type="text" class="form-control" id="emailSubject" name="subject" required>
            </div>
          </div>
          
          <!-- Email Message -->
          <div class="mb-4">
            <label for="emailMessage" class="form-label">Message</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-chat-text"></i></span>
              <textarea class="form-control" id="emailMessage" name="text" rows="6" placeholder="Type your message here..." required></textarea>
            </div>
            <div class="d-flex justify-content-between mt-1">
              <div class="form-text">Write your email content here</div>
              <div class="form-text"><span id="charCount">0</span>/2000 characters</div>
            </div>
          </div>
          
          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary btn-lg">
            <i class="bi bi-send-fill"></i> Send Email
          </button>
        </form>
      </div>
    </div>
    
    <!-- Footer -->
    <div class="text-center mt-4 text-muted">
      <p>Powered by Rahul Tiwari| Email Service Integration</p>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
    
  <script>
    // Character counter for message textarea
    const messageTextarea = document.getElementById('emailMessage');
    const charCount = document.getElementById('charCount');
    
    messageTextarea.addEventListener('input', function() {
      const currentLength = this.value.length;
      charCount.textContent = currentLength;
      
      // Change color if approaching limit
      if (currentLength > 1800) {
        charCount.style.color = '#dc3545';
      } else if (currentLength > 1500) {
        charCount.style.color = '#ffc107';
      } else {
        charCount.style.color = '#6c757d';
      }
    });
    
    // Form submission simulation
    const emailForm = document.getElementById('emailForm');
    const statusMessage = document.getElementById('statusMessage');
    const statusText = document.getElementById('statusText');
    
    emailForm.addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Basic validation
      const toEmail = document.getElementById('toEmail').value;
      const subject = document.getElementById('emailSubject').value;
      const message = document.getElementById('emailMessage').value;
      
      if (!toEmail || !subject || !message) {
        showStatus('Please fill in all required fields.', 'error');
        return;
      }
      
      if (!isValidEmail(toEmail)) {
        showStatus('Please enter a valid email address.', 'error');
        return;
      }
      
      // Simulate sending process
      showStatus('Sending email...', 'success');
      
      // Simulate AJAX request with timeout
      setTimeout(() => {
        showStatus('Email sent successfully!', 'success');
        
        // Reset form after successful "send"
        setTimeout(() => {
          emailForm.reset();
          charCount.textContent = '0';
          charCount.style.color = '#6c757d';
          statusMessage.style.display = 'none';
        }, 2000);
      }, 1500);
    });
    
    function showStatus(message, type) {
      statusText.textContent = message;
      statusMessage.className = `status-message ${type}`;
      statusMessage.style.display = 'block';
      statusMessage.innerHTML = `<i class="bi ${type === 'success' ? 'bi-check-circle' : 'bi-exclamation-circle'}"></i> <span id="statusText">${message}</span>`;
    }
    
    function isValidEmail(email) {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return emailRegex.test(email);
    }
  </script>
</body>

</html>